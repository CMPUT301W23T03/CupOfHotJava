<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_mylibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MY LIBRARY"
        android:textColor="@color/text1_bolded"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button_codelib_qn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/button1"
        android:gravity="center"
        android:text="QUICK NAV"
        android:textColor="@color/text2_general"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/ml_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sort By:"
        android:textColor="@color/text1_bolded"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/ml_sort_name_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button1"
            android:text="Name"
            android:textColor="@color/text2_general" />

        <Button
            android:id="@+id/ml_sort_points_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button1"
            android:text="Points"
            android:textColor="@color/text2_general" />

        <Button
            android:id="@+id/ml_sort_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button1"
            android:text="Date"
            android:textColor="@color/text2_general" />

    </LinearLayout>
    <ListView
        android:id="@+id/code_list_listview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:divider="#74736E"
        android:dividerHeight="2dp" />

    <Button
        android:id="@+id/button_addHardcodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="add ex codes" />

</LinearLayout>