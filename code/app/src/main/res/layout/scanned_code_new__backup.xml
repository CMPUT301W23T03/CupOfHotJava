<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <ImageButton
        android:id="@+id/civ_go_back"
        android:layout_width="65dp"
        android:layout_height="43dp"
        android:background="@android:color/transparent"
        android:contentDescription="BACK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/civ_back_text"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Back"
        android:textColor="@color/purple_200"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/menu_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24"
        tools:layout_editor_absoluteY="-1dp" />

    <TextView
        android:id="@+id/civ_hash_code_"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:text="7B7EA9EB434144E6BE5C78C7F557693965B7385052B4D7DD81C663D76EC28B0B"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_qr_code_name" />

    <TextView
        android:id="@+id/civ_qr_code_name"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Dubious Bar Fly"
        android:textColor="@color/purple_200"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_back_text" />

    <ImageView
        android:id="@+id/civ_display_img"
        android:layout_width="415dp"
        android:layout_height="272dp"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_hash_code_"
        app:srcCompat="@drawable/a_project_x" />

    <TextView
        android:id="@+id/civ_total_points"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="150points"
        android:textColor="@color/purple_200"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_display_img" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Take location photo for public view?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_total_points" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Save geolocation for public view?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <Button
        android:id="@+id/civ_show_attached2"
        android:layout_width="252dp"
        android:layout_height="63dp"
        android:text="CONFIRM"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox2" />

</androidx.constraintlayout.widget.ConstraintLayout>