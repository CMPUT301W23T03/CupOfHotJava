    <ImageView
        android:id="@+id/civ_display_img"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/a_project_x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_userTotalPointsDescript"
        app:layout_constraintWidth_percent="0.4">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Name: "
            android:textColor="@color/text1_bolded"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/civ_qr_code_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text1_bolded"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_userTotalPointsDescript"
        app:layout_constraintWidth_percent="0.4">

        <TextView
            android:id="@+id/hash_text"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Hashcode: "
            android:textColor="@color/text1_bolded"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/player_hash"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/text1_bolded"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_userTotalPointsDescript"
        app:layout_constraintWidth_percent="0.4">

        <TextView
            android:id="@+id/points_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Points: "
            android:textColor="@color/text1_bolded"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/civ_total_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/text1_bolded"
            android:textSize="20sp" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/checkbox_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take location photo\nfor public view?"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points_text" />

    <CheckBox
        android:id="@+id/checkbox_geolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save geolocation    \nfor public view?"
        android:textColor="@color/white"
        android:buttonTint="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_photo" />

    <Button
        android:id="@+id/civ_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/button1"
        android:gravity="center"
        android:text="   CONFIRM   "
        android:textColor="@color/text2_general"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_geolocation" />

