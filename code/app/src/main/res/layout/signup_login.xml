<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center">

    <TextView
        android:id="@+id/textview_signup_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="QR Hunter\nSign-Up/\nLogin"
        android:textColor="@color/text1_bolded"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1" />

    <EditText
        android:id="@+id/edittext_signup_username"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/fill5_edittext"
        android:textSize="20sp"
        android:gravity="center"
        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:textColor="@color/text1_bolded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/textview_signup_title" />

    <EditText
        android:id="@+id/edittext_signup_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/fill5_edittext"
        android:textSize="20sp"
        android:gravity="center"
        android:hint="Enter your email"
        android:inputType="textPersonName"
        android:textColor="@color/text1_bolded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/edittext_signup_username" />
    <TextView
        android:id="@+id/textview_regiondescript"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="bottom"
        android:text="Select Region:"
        android:textColor="@color/text1_bolded"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/edittext_signup_email"/>
    <Spinner
        android:id="@+id/spinner_signup_region"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/fill5_edittext"
        android:contentDescription="Select Region"
        android:hint="Select Region"
        android:popupBackground="@color/fill5_edittext"
        android:textColor="@color/text1_bolded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/textview_regiondescript" />

    <Button
        android:id="@+id/button_signup_confirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:gravity="center"
        android:backgroundTint="@color/button1"
        android:text="Confirm"
        android:textColor="@color/text2_general"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintTop_toBottomOf="@+id/spinner_signup_region" />
</androidx.constraintlayout.widget.ConstraintLayout>