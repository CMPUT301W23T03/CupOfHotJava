<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_addHardcodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="add ex codes" />

    <Button
        android:id="@+id/button_removeHardcodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="remove ex codes" />

    <Button
        android:id="@+id/button_add_individ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Individ" />

    <Button
        android:id="@+id/button_del_individ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Individ" />
    <Button
        android:id="@+id/button_del_individ_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Individ Cancel" />

    <ListView
        android:id="@+id/code_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>