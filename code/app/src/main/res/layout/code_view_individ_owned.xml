<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    >

    <Button
        android:id="@+id/btn_cvi_back"
        android:layout_width="113dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/button1"
        android:textColor="@color/text2_general"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <Button
        android:id="@+id/btn_cvi_quicknav"
        android:layout_width="142dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:text="Quick Nav"
        app:layout_constraintStart_toEndOf="@+id/btn_cvi_back"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/button1"
        android:textColor="@color/text2_general"
        app:srcCompat="@drawable/ic_baseline_menu_24" />

    <ImageButton
        android:id="@+id/btn_cvi_image"
        android:layout_width="149dp"
        android:layout_height="52dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_cvi_quicknav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@color/text1_bolded"
        app:srcCompat="@drawable/a_project_x" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="92dp"
        android:layout_height="42dp"
        android:layout_marginBottom="608dp"
        android:textColor="@color/text1_bolded"
        android:text="Name:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cvi_back"
        app:layout_constraintVertical_bias="0.01" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="192dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text1_bolded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/name_text"
        app:layout_constraintTop_toBottomOf="@+id/btn_cvi_quicknav" />

    <TextView
        android:id="@+id/hash_text"
        android:layout_width="68dp"
        android:layout_height="52dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:textColor="@color/text1_bolded"
        android:text="Hash\nCode:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/player_hash"
        android:layout_width="408dp"
        android:layout_height="52dp"
        android:textColor="@color/text1_bolded"
        app:layout_constraintStart_toEndOf="@+id/hash_text"
        app:layout_constraintTop_toBottomOf="@+id/player_name" />

    <TextView
        android:id="@+id/points_text"
        android:layout_width="121dp"
        android:layout_height="54dp"
        android:textColor="@color/text1_bolded"
        android:text="Points:"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/player_points"
        android:layout_width="163dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text1_bolded"
        app:layout_constraintStart_toEndOf="@+id/points_text"
        app:layout_constraintTop_toBottomOf="@+id/player_hash" />

    <TextView
        android:id="@+id/date_text"
        android:layout_width="193dp"
        android:layout_height="45dp"
        android:text="Date-Caught:"
        android:textColor="@color/text1_bolded"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/player_date_caught"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/text1_bolded"
        app:layout_constraintStart_toEndOf="@+id/date_text"
        app:layout_constraintTop_toBottomOf="@+id/points_text" />

    <TextView
        android:id="@+id/comments_text"
        android:layout_width="147dp"
        android:layout_height="25dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/text1_bolded"
        android:text="Comments:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/comment_btn"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/button1"
        android:text="Comment on this code"
        android:textColor="@color/text2_general"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <ListView
        android:id="@+id/cmt_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_remove_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment_btn" />

    <Button
        android:id="@+id/btn_remove_code"
        android:layout_width="250dp"
        android:layout_height="53dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Remove this Code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
