<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <TextView
        android:id="@+id/text_gotcha"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Gotcha!"
        android:textColor="@color/purple_200"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/civ_qr_code_name"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="Dubious Bar Fly"
        android:textColor="@color/purple_200"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gotcha" />

    <TextView
        android:id="@+id/civ_hash_code_"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:text="7B7EA9EB434144E6BE5C78C7F557693965B7385052B4D7DD81C663D76EC28B0B"
        android:textColor="@color/purple_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_qr_code_name" />

    <ImageView
        android:id="@+id/civ_display_img"
        android:layout_width="427dp"
        android:layout_height="157dp"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_hash_code_"
        app:srcCompat="@drawable/a_project_x" />

    <TextView
        android:id="@+id/civ_total_points"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginStart="44dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:text="150points"
        android:textColor="@color/purple_200"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_display_img" />

    <CheckBox
        android:id="@+id/checkbox_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Take location photo for public view?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_total_points" />

    <CheckBox
        android:id="@+id/checkbox_geolocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Save geolocation for public view?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_photo" />

    <Button
        android:id="@+id/civ_confirm_button"
        android:layout_width="252dp"
        android:layout_height="63dp"
        android:text="CONFIRM"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_geolocation" />

</androidx.constraintlayout.widget.ConstraintLayout>